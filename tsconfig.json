{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"strictNullChecks": true,
		"moduleResolution": "node",
		"plugins": [{ "name": "@astrojs/ts-plugin" }],
		"paths": {
			"@i18n/*": ["src/i18n/*"],
			"@utils/*": ["src/utils/*"],
			"@graphql/*": ["src/graphql/*"],
			"@components/*": ["src/components/*"]
		}
	},
	"exclude": ["node_modules", ".astro", "dist"]
}
